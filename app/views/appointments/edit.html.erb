<section class="intro">
  <div class="mask d-flex align-items-center h-100" style="background-color: #D6D6D6;">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card" style="border-radius: 1rem;">
            <div class="card-body py-0 px-5 text-center">
              <div class="my-md-3">
                <h1 class="fw-bold mb-0">Appointment</h1>
                <%= render 'form', appointment: @appointment %>
              </div>

              <div class="py-1">
                <%= link_to 'Show', @appointment, class:"btn btn-primary text-white" %>
                <%= link_to 'Back', appointments_path, class:"btn btn-primary text-white" %>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>