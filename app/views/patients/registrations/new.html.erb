<section class="intro">
  <div class="d-flex align-items-center" style="background-color: #D6D6D6;">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card" style="border-radius: 1rem;">
            <div class="card-body py-0 px-5 text-center">

              <div class="my-md-3 pb-2">

                <h1 class="fw-bold mb-0">Sign Up</h1>

                <i class="fas fa-user-md fa-2x my-2"></i>
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>
                  <div class="form-outline mb-3">
                    <%= f.text_field :name, autofocus: true, placeholder: "Name", class:"form-control form-control-lg" %>      
                  </div>
                  <div class="form-outline mb-3">
                    <%= f.text_field :surname, autofocus: true, placeholder: "Surname", class:"form-control form-control-lg" %>      
                  </div>
                  <div class="form-outline mb-3">
                    <%= f.date_field :DOB, autofocus: true, class:"form-control form-control-lg" %>      
                  </div>
                  <div class="form-outline mb-3">
                    <%= f.text_field :city, autofocus: true, placeholder: "City", class:"form-control form-control-lg" %>      
                  </div>
                  <div class="form-outline mb-3">
                    <%= f.email_field :email, autofocus: true, placeholder: "Email", class:"form-control form-control-lg" %>             
                  </div>
                  <div class="form-outline mb-3">
                    <%= f.text_area :medical_history, autofocus: true, placeholder: "Medical History", class:"form-control form-control-lg" %>      
                  </div>
                  <div class="form-outline mb-3">
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %>
                    <%= f.password_field :password, placeholder: "Password", class:"form-control form-control-lg" %>
                  </div>
                  <div class="form-outline mb-3">
                    <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", class:"form-control form-control-lg" %>
                  </div>
                  <%= f.submit "Sign Up", class:"btn btn-primary btn-lg btn-rounded text-white px-5" %>
                  
                <% end %>
              </div>

              <div class="pb-1">
                <p class="mb-0">Don't have an account? <%= render "devise/shared/links", class:"text-body fw-bold" %></p>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
