<header class="w-100 p-0 w-0">
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand" href="#">
      <img src="" width="30" height="30" class="d-inline-block align-top" alt="">
      Crisalix
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <% if doctor_signed_in? %>
          <%= link_to current_doctor.name, edit_doctor_registration_path, class:"nav-item nav-link" %>
          <%= link_to "Appointments", appointments_path, class:"nav-item nav-link" %>
          <%= link_to "Sign out", destroy_doctor_session_path, method: :delete, class:"nav-item nav-link" %>
        <% elsif patient_signed_in? %>
            <%= link_to current_patient.name, edit_patient_registration_path, class:"nav-item nav-link" %>
            <%= link_to "Doctors", doctors_path, class:"nav-item nav-link" %>
            <%= link_to "Appointments", appointments_path, class:"nav-item nav-link" %>
            <%= link_to "Sign out", destroy_patient_session_path, method: :delete, class:"nav-item nav-link" %>
        <% else %>
          <%= link_to "Sign in as Doctor", new_doctor_session_path, class:"nav-item nav-link" %>
          <%= link_to "Sign in as Patient", new_patient_session_path, class:"nav-item nav-link" %>
        <% end %>
      </div>
    </div>
  </nav>
</header>
